<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrudMatakuliah.MainActivityMatkul">

    <Button
        android:id="@+id/btnHapusDsn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hapus Matakuliah"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnUbahDsn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ubah Matakuliah"
        app:layout_constraintBottom_toTopOf="@+id/btnHapusDsn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnTambahDsn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tambah Matakuliah"
        app:layout_constraintBottom_toTopOf="@+id/btnUbahDsn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnLihatDsn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lihat Matakuliah"
        app:layout_constraintBottom_toTopOf="@+id/btnTambahDsn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>